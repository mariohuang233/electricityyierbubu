{
  "name": "electricity-monitor-docker",
  "description": "家庭用电监控与可视化系统 - Docker 部署",
  "version": "1.0.0",
  "services": [
    {
      "name": "backend",
      "description": "Node.js 后端 API 服务",
      "buildCommand": "docker build -t electricity-backend ./backend",
      "startCommand": "docker run -p 3001:3001 electricity-backend",
      "environment": "docker",
      "port": 3001,
      "healthCheck": {
        "path": "/api/health",
        "port": 3001,
        "interval": 30,
        "timeout": 10,
        "retries": 3
      },
      "env": {
        "NODE_ENV": "production",
        "PORT": "3001",
        "LOG_LEVEL": "info"
      }
    },
    {
      "name": "frontend",
      "description": "React 前端静态应用",
      "buildCommand": "docker build -t electricity-frontend ./frontend",
      "startCommand": "docker run -p 80:80 electricity-frontend",
      "environment": "docker",
      "port": 80,
      "env": {
        "REACT_APP_API_URL": "https://backend-{service-id}.zeabur.app"
      }
    }
  ]
}
